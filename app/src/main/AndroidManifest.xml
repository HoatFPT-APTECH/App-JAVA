<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyQR"
        tools:targetApi="31">
        <activity
            android:name=".ui.home.QR_Image_Activity"
            android:exported="false" />
        <activity
            android:name=".ui.home.Text_To_QR_Activity"
            android:exported="false" />
        <activity
            android:name=".ui.scan.TextToQRActivity"
            android:exported="false"
            android:label="Generate QR"
            android:theme="@style/Theme.MyQR" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>