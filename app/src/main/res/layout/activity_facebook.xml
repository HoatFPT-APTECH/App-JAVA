<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.FacebookActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Facebook QR"
        android:textColor="@color/secondColor"
        android:textSize="20dp"
        />
    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="105dp"
        android:layout_height="104dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="69dp"
        android:src="@drawable/ic_facebook_blue" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Facebook Name: "
        android:drawableLeft="@drawable/ic_facebook_blue"
        android:textSize="18dp"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:layout_marginLeft="50dp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="225dp" />

    <EditText
        android:id="@+id/edtNameWebstie"
        android:layout_width="318dp"
        android:minHeight="45dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:paddingLeft="10dp"
        android:hint="Input your facebook name"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="263dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Link website: "
        android:drawableLeft="@drawable/ic_linkwebsite_foreground"
        android:textSize="18dp"
        android:drawablePadding="10dp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="322dp" />

    <EditText
        android:id="@+id/edtLinkwebsite"
        android:layout_width="312dp"
        android:minHeight="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:hint="Input link facebook"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="361dp" />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/drw_button_generate"
        android:text="Generate"
        />
</LinearLayout>



