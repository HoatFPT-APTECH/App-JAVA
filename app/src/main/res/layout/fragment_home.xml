<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
<TextView
    android:id="@+id/title_GenerateCode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:gravity="center"
    android:text="Generate QR Code "
    android:textColor="@color/white"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:textSize="20dp"
    android:textStyle="bold"

    />

    <TextView
        android:id="@+id/title_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/title_GenerateCode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Generate Options"
        android:textSize="18dp"
        android:textColor="@color/secondColor"
        android:paddingLeft="10dp"
 />
    <Button
        android:id="@+id/gen_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_option"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
         android:background="@drawable/rounded_button"
        android:text=" Text"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:gravity="left|center"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_text_foreground"
        android:drawableRight="@drawable/ic_arrow_right_foreground"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>