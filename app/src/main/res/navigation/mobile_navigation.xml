    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.hoatapp.myqr.ui.home.HomeFragment"
        android:label="Home"

        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_scan"
        android:name="com.hoatapp.myqr.ui.scan.ScanFragment"
        android:label="Scan"
        tools:layout="@layout/fragment_scan" />
    <fragment
        android:id="@+id/navigation_card"
        android:name="com.hoatapp.myqr.ui.card.CardFragment"
        android:label="Card"
        tools:layout="@layout/fragment_card" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.hoatapp.myqr.ui.account.AccountFragment"
